      "source": [
        "# Conversion functions\n",
        "def meters_to_feet(meters):\n",
        "    return meters * 3.28084\n",
        "\n",
        "def feet_to_meters(feet):\n",
        "    return feet / 3.28084\n",
        "\n",
        "def kg_to_pounds(kg):\n",
        "    return kg * 2.20462\n",
        "\n",
        "def pounds_to_kg(pounds):\n",
        "    return pounds / 2.20462\n",
        "\n",
        "def pascal_to_psi(pascal):\n",
        "    return pascal * 0.000145038\n",
        "\n",
        "def psi_to_pascal(psi):\n",
        "    return psi / 0.000145038\n",
        "\n",
        "def celsius_to_fahrenheit(celsius):\n",
        "    return (celsius * 9/5) + 32\n",
        "\n",
        "def fahrenheit_to_celsius(fahrenheit):\n",
        "    return (fahrenheit - 32) * 5/9\n",
        "\n",
        "def liters_to_gallons(liters):\n",
        "    return liters * 0.264172\n",
        "\n",
        "def gallons_to_liters(gallons):\n",
        "    return gallons / 0.264172\n",
        "\n",
        "# Menu for unit conversion\n",
        "def show_menu():\n",
        "    print(\"Select conversion type:\")\n",
        "    print(\"1. Length\")\n",
        "    print(\"2. Weight\")\n",
        "    print(\"3. Pressure\")\n",
        "    print(\"4. Temperature\")\n",
        "    print(\"5. Volume\")\n",
        "    print(\"0. Exit\")\n",
        "\n",
        "# Main program loop\n",
        "while True:\n",
        "    show_menu()\n",
        "    choice = input(\"Enter the number for conversion type: \")\n",
        "\n",
        "    if choice == \"1\":  # Length\n",
        "        unit = input(\"Select conversion: (1) Meters to Feet or (2) Feet to Meters: \")\n",
        "        value = float(input(\"Enter the value: \"))\n",
        "        if unit == \"1\":\n",
        "            print(f\"{value} meters = {meters_to_feet(value)} feet\")\n",
        "        else:\n",
        "            print(f\"{value} feet = {feet_to_meters(value)} meters\")\n",
        "\n",
        "    elif choice == \"2\":  # Weight\n",
        "        unit = input(\"Select conversion: (1) Kilograms to Pounds or (2) Pounds to Kilograms: \")\n",
        "        value = float(input(\"Enter the value: \"))\n",
        "        if unit == \"1\":\n",
        "            print(f\"{value} kg = {kg_to_pounds(value)} pounds\")\n",
        "        else:\n",
        "            print(f\"{value} pounds = {pounds_to_kg(value)} kg\")\n",
        "\n",
        "    elif choice == \"3\":  # Pressure\n",
        "        unit = input(\"Select conversion: (1) Pascal to PSI or (2) PSI to Pascal: \")\n",
        "        value = float(input(\"Enter the value: \"))\n",
        "        if unit == \"1\":\n",
        "            print(f\"{value} Pascal = {pascal_to_psi(value)} PSI\")\n",
        "        else:\n",
        "            print(f\"{value} PSI = {psi_to_pascal(value)} Pascal\")\n",
        "\n",
        "    elif choice == \"4\":  # Temperature\n",
        "        unit = input(\"Select conversion: (1) Celsius to Fahrenheit or (2) Fahrenheit to Celsius: \")\n",
        "        value = float(input(\"Enter the value: \"))\n",
        "        if unit == \"1\":\n",
        "            print(f\"{value} Celsius = {celsius_to_fahrenheit(value)} Fahrenheit\")\n",
        "        else:\n",
        "            print(f\"{value} Fahrenheit = {fahrenheit_to_celsius(value)} Celsius\")\n",
        "\n",
        "    elif choice == \"5\":  # Volume\n",
        "        unit = input(\"Select conversion: (1) Liters to Gallons or (2) Gallons to Liters: \")\n",
        "        value = float(input(\"Enter the value: \"))\n",
        "        if unit == \"1\":\n",
        "            print(f\"{value} liters = {liters_to_gallons(value)} gallons\")\n",
        "        else:\n",
        "            print(f\"{value} gallons = {gallons_to_liters(value)} liters\")\n",
        "\n",
        "    elif choice == \"0\":\n",
        "        print(\"Exiting the program.\")\n",
        "        break\n",
        "\n",
        "    else:\n",
        "        print(\"Invalid choice. Please try again.\")\n"
      ]
    }
  ]
}